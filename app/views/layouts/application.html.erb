<!DOCTYPE html>
<html>
  <head>
    <title><%= t('application_name') %></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="container">

    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/"><%= t('application_name') %></a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li class="active"><a href="#">Текущая неделя</a></li>
            <li><a href="#">Календарь</a></li>
            <li><a href="#">Книги</a></li>
            <li><a href="#">Люди</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if current_user %>
                <li><%= link_to 'Выход', destroy_user_session_path, method: :delete %></li>
            <% else %>
                <li><%= link_to 'Вход', new_user_session_path, method: :get %></li>
                <li><%= link_to 'Регистрация', new_user_registration_path, method: :get %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <div>
      <%= yield %>
    </div>

  </div>
  </body>
</html>
